          .menu-wrapper
            ul
              li.cat-title Informacion
              li
                a(href="http://www.corsair.com/en-eu/company/contact", target="") Contáctenos  
              li
                a(href="http://www.corsair.com/en-eu/company/about-corsair", target="") About
             
