                  i.fa.fa-instagram
                a(href="#", target="_blank")
                  i.fa.fa-twitter
                a(href="#", target="_blank")
                  i.fa.fa-youtube  
  
          .menu-wrapper
            ul
              li.cat-title Productos 
              li
                a(href="http://www.corsair.com/en-eu/where-to-buy", target="") Tarjetas Graficas 
              li
