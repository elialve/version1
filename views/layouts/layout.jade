doctype html
html(lang="x-default")
  head
    title !{title}
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(href="/css/bootstrap.min.css", rel="stylesheet")
    link(rel='stylesheet', href='/font/font-awesome-4.7.0/css/font-awesome.min.css')
    // Bootstrap core CSS
    link(href='/css/compiled.min.css', rel='stylesheet')
    link(href="/css/estilos.css", rel="stylesheet")
    link(href="/css/main.css", rel="stylesheet")
    script(type='text/javascript', src='/js/jquery-3.2.1.min.js')
    
  body
      nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.elegant-color-dark
        .container
          a.navbar-brand(href="#") 
           img.d-inline-block.align-top(src="/img/logo.png", width="30", height="30", alt="") 
           | !{title}
           button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNavDropdown', aria-controls='navbarNavDropdown', aria-expanded='false', aria-label='Toggle navigation')
               span.navbar-toggler-icon  
          #navbarNavDropdown.collapse.navbar-collapse
                 ul.navbar-nav
                   li.nav-item.active
                     a.nav-link.mov(href='/')
                       | Home 
                       span.sr-only (current)   
                   li.nav-item
                     a.nav-link.mov(href='#') Productos  
                   li.nav-item
                     a.nav-link.mov(href='#') Contáctenos   
                   li.nav-item.dropdown
                     a#navbarDropdownMenuLink.nav-link.dropdown-toggle.mov(href='#', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                       i.fa.fa-shopping-cart(aria-hidden="true") Cart
                       if session.cart          
                        span !{session.cart.totalItems}   
                     if session.cart
                       .dropdown-menu(aria-labelledby='navbarDropdownMenuLink')
                         for result in session.cart.items
                           a.dropdown-item(href='#') #{result.item.nombre} X#{result.quantity} $#{result.price}
                         a.dropdown-item(href='#') Total: $!{ session.cart.totalPrice }
                         a.dropdown-item.btn-success(href='/cart/') Pasar por caja
      
